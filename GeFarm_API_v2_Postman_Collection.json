            "url": {
              "raw": "{{base_url}}/api/devices/details?device_id=EMC-FIX-TEST",
              "host": ["{{base_url}}"],
              "path": ["api", "devices", "details"],
              "query": [
                {
                  "key": "device_id",
                  "value": "EMC-FIX-TEST"
                }
              ]
            },
            "description": "Ottieni i dettagli completi di un dispositivo"
          }
        }
